<header class="l-header" role="banner">
  {{ page.navigation|without('views_block__header_cta_block_1') }}
</header>

<main role="main" class="{{ (node.bundle == 'organisation') ? '-bg-main-gray -p-bottom -p-top' }}">
  {{ page.navigation.views_block__header_cta_block_1 }}
  {{ page.highlighted }}
  {{ page.help }}

  <div class="l-content">
    <a id="main-content" tabindex="-1"></a>{# link is in html.html.twig #}
    {{ page.content|without('drupal_nl_page_title') }}
  </div>{# /.layout-content #}

</main>

<footer role="contentinfo" class="footer l-footer clearfix">
  <div class="l-container">
    <div class="footer-block footer-menu">
      <h3 class="footer-menu__title">Lenker</h3>
      {{ page.footer.drupal_nl_footer }}
    </div>
    <div class="footer-block footer-copyright">
      <p>&copy; {{ "now"|date('Y') }} {{ 'The Norwegian Drupal association<br/>All content is available under <a rel="license" href="https://creativecommons.org/licenses/by/4.0/">Creative Commons 4.0 International-licence</a>'|trans }}.
      </p>
    </div>
    <div class="footer-block footer-social">
      <p>{{ 'Drupal is a registered <a href="https://www.drupal.com/trademark">trademark</a> of Dries Buytaert'|trans }}</p>
      {{ page.footer.socialmenu }}
    </div>
  </div>
</footer>
